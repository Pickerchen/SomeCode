<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg_choose"
        android:transitionName="share_bg"
        >

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:orientation="horizontal"
            >

            <View
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="1dp"
                android:background="#bcbcbc"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:text="已经拥有暖哄哄的水杯"
                android:textColor="#bcbcbc"
                android:gravity="center"
                />

            <View
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="1dp"
                android:background="#bcbcbc"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                />

        </LinearLayout>
        <LinearLayout
            android:clickable="true"
            android:id="@+id/ll_isMaster"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/yili_choose_selector"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="我是杯子主人  马上蓝牙配对"
                android:textColor="@color/selector_tv_choose"
                android:gravity="center"
                />

        </LinearLayout>

        <LinearLayout
            android:clickable="true"
            android:id="@+id/ll_gueste"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/yili_choose_selector"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="我还不是主人  先进App逛逛"
                android:textColor="@color/selector_tv_choose"
                android:gravity="center"
                />

        </LinearLayout>

    </LinearLayout>



    </LinearLayout>

