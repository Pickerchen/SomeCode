<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ececec"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/durian_head_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_color" >
   <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="fill_parent"
        android:layout_height="60dp">

        <LinearLayout
            android:id="@+id/layout_back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/back_sel" />

        </LinearLayout>

        <com.sen5.ocup.gui.MarqueeTextView
            android:id="@+id/tv_username"
            android:layout_width="200dp"
            android:layout_height="fill_parent"
            android:ellipsize="marquee"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:text="@string/watertem_led"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF" />
    </RelativeLayout>
    </FrameLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_devider"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#cbcbcb" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                android:paddingTop="8dp" >

                <com.sen5.ocup.gui.SegoTextView
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/watertem_led"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/gray_text_color"
                     />

                <com.sen5.ocup.gui.SwitchView
                    android:id="@+id/switch_default_watertem_led"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_custom_waterled"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:id="@+id/temp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:id="@+id/layout_color_below40"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="#fff"
                            android:orientation="horizontal"
                            android:padding="10dp" >

                            <com.sen5.ocup.gui.SegoTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center_vertical"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="@string/below40"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/gray_text_color" />

                            <ImageView
                                android:id="@+id/tv_color_below40"
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_gravity="right"
                                android:layout_weight="1"
                                android:paddingLeft="100dp"
                                android:paddingRight="0dp"
                                android:src="@drawable/circle_blue" />
                        </LinearLayout>
                        <!-- 000000000000000000000000000000000000 -->

                        <LinearLayout
                            android:id="@+id/layout_selcolor_below40"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="#fff"
                            android:orientation="vertical"
                            android:visibility="gone" >

                            <ImageView
                                android:id="@+id/pic_change_one"
                                android:layout_width="60dp"
                                android:layout_height="120dp"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/blue_small" />

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="60dp"
                                android:layout_marginRight="60dp"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:orientation="horizontal" >

                                
                                <View
                                    android:id="@+id/radioButton_below40_green"
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_weight="1"
                                    android:background="#12dd12" />

                                <View
                                    android:id="@+id/radioButton_below40_yellow"
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_weight="1"
                                    android:background="#ff8e06" />

                                <View
                                    android:id="@+id/radioButton_below40_purple"
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_weight="1"
                                    android:background="#d424ff" />

                                <View
                                    android:id="@+id/radioButton_below40_pink"
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_weight="1"
                                    android:background="@color/main_color" />
                                
                                
                                <View
                                    android:id="@+id/radioButton_below40_blue"
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_weight="1"
                                    android:background="#2eabff" />

                                <View
                                    android:id="@+id/radioButton_below40_cyan"
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_weight="1"
                                    android:background="#03f9ff" />
                       			<View
                                    android:id="@+id/radioButton_below40_white"
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_weight="1"
                                    android:visibility="gone"
                                    android:background="#e4ecef" />
                            </LinearLayout>
                        </LinearLayout>
                        <!-- 0000000000000000000 -->

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:background="#cbcbcb" />

                        <LinearLayout
                            android:id="@+id/layout_color_middle"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="#fff"
                            android:orientation="horizontal"
                            android:padding="10dp" >

                            <com.sen5.ocup.gui.SegoTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center_vertical"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="@string/middletem"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/gray_text_color" />

                            <ImageView
                                android:id="@+id/tv_color_middle"
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_gravity="right"
                                android:layout_weight="1"
                                android:paddingLeft="100dp"
                                android:paddingRight="0dp"
                                android:src="@drawable/circle_pink" />
                        </LinearLayout>

                        <!-- 11111111111111111111111 -->

                        <LinearLayout
                            android:id="@+id/layout_selcolor_middle"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="#fff"
                            android:orientation="vertical"
                            android:visibility="gone" >

                            <ImageView
                                android:id="@+id/pic_change_two"
                                android:layout_width="60dp"
                                android:layout_height="120dp"
                                android:layout_gravity="center_horizontal"
                                android:src="@drawable/blue_small" />

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="60dp"
                                android:layout_marginRight="60dp"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal" >

                                
                                <View
                                    android:id="@+id/radioButton_middle_green"
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_weight="1"
                                    android:background="#12dd12" />
                                

                                <View
                                    android:id="@+id/radioButton_middle_yellow"
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_weight="1"
                                    android:background="#ff8e06" />


                                <View
                                    android:id="@+id/radioButton_middle_purple"
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_weight="1"
                                    android:background="#d424ff" />

                                <View
                                    android:id="@+id/radioButton_middle_pink"
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_weight="1"
                                    android:background="@color/main_color" />

                                <View
                                    android:id="@+id/radioButton_middle_blue"
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_weight="1"
                                    android:background="#2eabff" />

                                <View
                                    android:id="@+id/radioButton_middle_cyan"
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_weight="1"
                                    android:background="#03f9ff" />

							   <View
                                    android:id="@+id/radioButton_middle_white"
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_weight="1"
                                    android:visibility="gone"
                                    android:background="#e4ecef" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- 1111 -->

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:background="#cbcbcb" />

                        <LinearLayout
                            android:id="@+id/layout_color_above60"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="#fff"
                            android:orientation="horizontal"
                            android:padding="10dp" >

                            <com.sen5.ocup.gui.SegoTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|center_vertical"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="@string/above60"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#7a7a7a" />

                            <ImageView
                                android:id="@+id/tv_color_above60"
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_gravity="right"
                                android:layout_weight="1"
                                android:paddingLeft="100dp"
                                android:paddingRight="0dp"
                                android:src="@drawable/circle_red" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_selcolor_above60"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="#fff"
                            android:orientation="vertical"
                            android:visibility="gone" >

                            <com.sen5.ocup.gui.CustomRadioGroup
                                android:id="@+id/radiogroup_above60"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical" >

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:orientation="horizontal" >

                                    <RadioButton
                                        android:id="@+id/radioButton_red"
                                        style="@style/radiobutton_red"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1" />

                                    <RadioButton
                                        android:id="@+id/radioButton_yellow"
                                        style="@style/radiobutton_yellow"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1" />

                                    <RadioButton
                                        android:id="@+id/radioButton_blue"
                                        style="@style/radiobutton_blue"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:orientation="horizontal" >

                                    <RadioButton
                                        android:id="@+id/radioButton_green"
                                        style="@style/radiobutton_blue"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="@string/green" />

                                    <RadioButton
                                        android:id="@+id/radioButton_purple"
                                        style="@style/radiobutton_blue"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="@string/purple" />

                                    <RadioButton
                                        android:id="@+id/radioButton_white"
                                        style="@style/radiobutton_blue"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="@string/white" />
                                </LinearLayout>

                                <RadioButton
                                    android:id="@+id/radioButton_cyan"
                                    style="@style/radiobutton_blue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="@string/cyan" />
                            </com.sen5.ocup.gui.CustomRadioGroup>
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>

            <com.sen5.ocup.gui.SegoTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/default_watertem_led_tips"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/gray_text_color" />
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/layout_wait"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#33000000"
            android:gravity="center"
            android:orientation="vertical" >

            <ProgressBar
                android:id="@+id/progressBar1"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_btloading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@color/gray_text_color"
                android:text="@string/syncuping"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>