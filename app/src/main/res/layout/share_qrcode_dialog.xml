<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
    android:background="@drawable/yili_shape_contacts_dialog"
              android:layout_width="match_parent"
              android:layout_height="310dp">

    <ImageView
        android:scaleType="fitCenter"
        android:id="@+id/share_qr"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:src="@drawable/user_me"
        android:textSize="18dp"
        android:gravity="center"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#747474"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_marginBottom="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/dialog_share_weixin"
            android:gravity="center"
            android:clickable="true"
            android:id="@+id/tv_weixin"
            android:textColor="#747474"
            android:textSize="16dp"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/wechat"
            />

        <View
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:background="#747474"
            />
        <TextView
            android:layout_marginBottom="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/dialog_share_pyq"
            android:gravity="center"
            android:id="@+id/tv_pyq"
            android:clickable="true"
            android:textColor="#747474"
            android:textSize="16dp"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/friends"
            />

    </LinearLayout>

</LinearLayout>